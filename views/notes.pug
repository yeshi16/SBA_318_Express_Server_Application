doctype html 
html 
    head 
        title My Notes App 
    body 
        nav 
            a(href="/home") Home
            a(href="/notes") All Notes
        h1 Notes 
        ul
            each note in notes 
                li 
                    | #{note.title} - #{note.content}
        form(action='/notes' method='POST')
            input(type='text' name='title' placeholder='Title' required)
            textarea(name="content" placeholder='Note' required)
            button(type='submit') Add Note         